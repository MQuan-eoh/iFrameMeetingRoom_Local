# Meeting Room Management System - Environment Configuration
# For Private Cloud Deployment

# Server Configuration
NODE_ENV=production
PORT=3000

# Data Storage Configuration
DATA_DIR=./data
MAX_BACKUPS=20
MAX_UPLOAD_SIZE=52428800

# Security Configuration - IMPORTANT: Update these domains for your cloud deployment
ALLOWED_ORIGINS=https://your-domain.com,https://app.your-domain.com,https://iot-platform.your-domain.com

# Logging Configuration
LOG_LEVEL=combined

# Rate Limiting (requests per 15 minutes)
RATE_LIMIT_MAX_REQUESTS=1000

# Session Configuration
SESSION_SECRET=your-secure-session-secret-change-this-in-production

# Database Configuration (if needed in future)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=meeting_room_db
# DB_USER=meeting_room_user
# DB_PASSWORD=secure_password

# Cache Configuration
CACHE_CONTROL_MAX_AGE=3600

# SSL Configuration (handled by nginx proxy)
TRUST_PROXY=true

# Application Info
APP_VERSION=2.0.0
APP_NAME=Meeting Room Management System

# Meeting Management Features
ENABLE_MEETING_DELETION=true
DELETE_CONFIRMATION_REQUIRED=true
DELETE_AUTHENTICATION_REQUIRED=true
BATCH_DELETE_LIMIT=25

# Development/Debug Settings (set to false in production)
DEBUG_MODE=false
VERBOSE_LOGGING=false
