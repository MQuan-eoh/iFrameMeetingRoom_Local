# Meeting Room Management System - Development Environment
# For local development and testing

# Server Configuration
NODE_ENV=development
PORT=3000

# Data Storage Configuration (Local paths)
DATA_DIR=./data
MAX_BACKUPS=5
MAX_UPLOAD_SIZE=52428800

# Security Configuration - Local network IPs
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://192.168.1.47:3000,http://192.168.1.99:3000,http://192.168.1.100:3000,http://192.168.1.101:3000

# Logging Configuration
LOG_LEVEL=dev

# Rate Limiting (relaxed for development)
RATE_LIMIT_MAX_REQUESTS=5000

# Session Configuration
SESSION_SECRET=development-secret-key-not-for-production

# Cache Configuration (short cache for development)
CACHE_CONTROL_MAX_AGE=300

# SSL Configuration
TRUST_PROXY=false

# Application Info
APP_VERSION=2.0.0
APP_NAME=Meeting Room Management System

# Development Settings
DEBUG_MODE=true
VERBOSE_LOGGING=true
