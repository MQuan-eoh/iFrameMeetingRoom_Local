# Meeting Room Management System - Local Testing Configuration
# For testing private cloud setup on local network

# Server Configuration
NODE_ENV=local
PORT=3000

# Data Storage Configuration (Windows compatible)
DATA_DIR=./data
MAX_BACKUPS=20
MAX_UPLOAD_SIZE=52428800

# Security Configuration - Local network IPs
ALLOWED_ORIGINS=http://localhost:3000,http://192.168.1.47:3000,http://192.168.1.99:3000,http://192.168.1.100:3000,http://192.168.1.101:3000,http://192.168.1.102:3000,http://127.0.0.1:5500

# Logging Configuration
LOG_LEVEL=dev

# Rate Limiting (more relaxed for testing)
RATE_LIMIT_MAX_REQUESTS=5000

# Session Configuration
SESSION_SECRET=local-testing-secret-key

# Cache Configuration
CACHE_CONTROL_MAX_AGE=300

# SSL Configuration
TRUST_PROXY=false

# Application Info
APP_VERSION=2.0.0
APP_NAME=Meeting Room Management System

# Development/Debug Settings
DEBUG_MODE=true
VERBOSE_LOGGING=true